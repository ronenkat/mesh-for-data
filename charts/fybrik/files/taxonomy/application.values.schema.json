{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "application.values.schema.json",
    "title": "Application Values Taxonomy",
    "type": "object",
    "description": "Values contributed to by Fybrik applications.",
    "properties": {
        "spec": {
            "type": "object",
            "properties": {
                "appInfo": {
                    "type": "object",
                    "properties": {
                        "intent": { "$ref": "policymanager.values.schema.json#/definitions/intent"},
                        "role": { "$ref": "policymanager.values.schema.json#/definitions/role"}
                    },
                    "required": ["intent", "role"]
                },
                "data": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "requirements": {
                                "type": "object",
                                "properties": {
                                    "interface": { "$ref": "module.values.schema.json#/definitions/interface" }
                                },
                                "required": ["interface"]
                            }
                        },
                        "required": ["requirements"]
                    }
                }
            },
            "required": ["appInfo", "data"]
        }
    },
    "required": ["spec"]
} 